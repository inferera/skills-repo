{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skills-registry.github.io/schemas/skill.schema.json",
  "title": "Skill Metadata (.x_skill.yaml) v2",
  "description": "Schema for skill metadata with flat category structure",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^x-": {}
  },
  "required": ["specVersion", "id", "title", "description", "category", "source"],
  "properties": {
    "specVersion": {
      "type": "integer",
      "const": 2,
      "description": "Schema version (v2 = flat categories)"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "Unique skill identifier (kebab-case)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120,
      "description": "Skill display title"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Skill description"
    },
    "category": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "Primary category ID (single level)"
    },
    "license": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "description": "License identifier (e.g., MIT, Apache-2.0)"
    },
    "authors": {
      "type": "array",
      "description": "Skill authors",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "minLength": 1, "maxLength": 120 },
          "url": { "type": "string", "minLength": 1, "maxLength": 500 },
          "email": { "type": "string", "minLength": 1, "maxLength": 320 }
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Skill tags for search and filtering",
      "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
    },
    "agents": {
      "type": "array",
      "description": "Compatible AI agents",
      "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
    },
    "runtime": {
      "type": "array",
      "description": "Runtime requirements",
      "items": { "type": "string", "minLength": 1, "maxLength": 64 }
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "description": "External links",
      "properties": {
        "homepage": { "type": "string", "minLength": 1, "maxLength": 500 },
        "docs": { "type": "string", "minLength": 1, "maxLength": 500 },
        "repo": { "type": "string", "minLength": 1, "maxLength": 500 }
      }
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "path", "ref"],
      "description": "Source repository information",
      "properties": {
        "repo": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "description": "GitHub repository URL"
        },
        "path": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "description": "Path within repository"
        },
        "ref": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Git ref (branch or tag)"
        },
        "syncedCommit": {
          "type": "string",
          "minLength": 7,
          "maxLength": 64,
          "description": "Last synced commit SHA"
        }
      }
    },
    "related": {
      "type": "array",
      "description": "Related skill IDs",
      "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
    }
  }
}
